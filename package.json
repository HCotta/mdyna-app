{
  "name": "mdyna",
  "version": "0.2.6",
  "description": "A notes app with Markdown support",
  "main": "main.js",
  "scripts": {
    "build-dist": "export NODE_ENV=PROD && rm -rf ./dist && yarn build-electron && electron-builder -lw",
    "build-electron": "export NODE_ENV=PROD && rm -rf ./dist/web && webpack --config webpack.config.electron.js;",
    "build-webpack": "export NODE_ENV=PROD && rm -rf ./dist/web && webpack --optimize-minimize --config webpack.config.js",
    "copy-package-files": "rm -rf release && mkdir release && cp dist/*.AppImage release && cp dist/*.deb release && cp dist/*.exe release",
    "create-icons": "electron-icon-maker --input=./resources/MdynaLogoCircle.png --output=./resources/",
    "electron-builder": "electron-builder",
    "install-all": "rm -rf ./node_modules && yarn install && cd app && rm -rf ./node_modules && yarn install",
    "pack-asar": "./node_modules/.bin/asar pack mdyna app.asar",
    "pack-build": "yarn build-dist && yarn copy-package-files",
    "publish-app": "yarn build-dist --publish always",
    "reset": "rm -rf ./node_modules && yarn install",
    "start": "rm -rf ./dist && export NODE_ENV=DEV && concurrently \"webpack-dev-server --hot --inline\" \"sleep 2 && electron ./main.js\"",
    "start-electron": "yarn build-electron && export NODE_ENV=PROD && electron --debug ./main.js",
    "test": "lint-staged",
    "version:patch": "yarn version --new-version patch",
    "version:minor": "yarn version --new-version minor",
    "version:major": "yarn version --new-version major",
    "watch": "webpack-dev-server --hot --inline"
  },
  "author": {
    "name": "David Morais",
    "email": "davidmorais92@gmail.com"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "build": {
    "productName": "mdyna",
    "appId": "com.electron.mdyna",
    "files": [
      "dist/web/",
      "node_modules/",
      "splash.html",
      "main.js",
      "package.json",
      "resources/icons/**",
      "resources/**"
    ],
    "directories": {
      "app": ".",
      "buildResources": "resources"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "resources/icons/win/icon.ico",
      "publish": {
        "provider": "github",
        "releaseType": "release"
      }
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "icons/png",
      "publish": {
        "provider": "github",
        "releaseType": "release"
      },
      "category": "Development"
    }
  },
  "dependencies": {
    "cross-env": "5.0.0",
    "electron-log": "^2.2.17",
    "electron-reload": "^1.2.2",
    "electron-store": "^2.0.0",
    "electron-updater": "^4.0.6",
    "lint-staged": "^8.1.0",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0-beta.49",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/preset-react": "^7.0.0-beta.49",
    "asar": "^0.14.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta.3",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "^0.28.3",
    "electron": "^4.0.8",
    "electron-builder": "^20.38.2",
    "electron-icon-maker": "0.0.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "15.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "inuit-defaults": "^0.2.3",
    "node-sass": "^4.9.2",
    "open-browser-webpack-plugin": "0.0.5",
    "postcss": "^6.0.1",
    "postcss-cssnext": "^2.11.0",
    "postcss-loader": "^2.0.5",
    "postcss-mixins": "^6.0.0",
    "prettier-eslint": "^8.8.1",
    "react": "^16.5.2",
    "react-addons-test-utils": "15.5.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.1",
    "url-loader": "0.5.8",
    "webpack": "3.3.0",
    "webpack-dev-server": "2.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mdyna/Mdyna-app.git"
  },
  "keywords": [
    "react",
    "webpack",
    "boilerplate",
    "webpack 3.3",
    "babel",
    "es6"
  ]
}
